.tabs-box {
  /* 指定宽度 + 不换行 */
  width: 750rpx;
  white-space: nowrap;
  border-bottom: 1px solid #cccccc;
  /* 想要让 tab 固定到顶部 */
  position: sticky;
  top: 0;
  z-index: 9;
  background-color: white;
}

.tab {
  /* 指定 display */
  display: inline-block;
  padding: 12px 22px;
}

.active {
  color: #f94d2a;
}
